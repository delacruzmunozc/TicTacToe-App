<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Supermunch.tictactoe.SmsMultiplayer" >

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:columnCount="3"
        android:rowCount="3" >

        <ImageButton
            android:id="@+id/ImageButton0"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="upLeftClick"
            android:src="@drawable/blank" />

        <ImageButton
            android:id="@+id/ImageButton4"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:onClick="centerClick"
            android:src="@drawable/_ll_" />

        <ImageButton
            android:id="@+id/ImageButton8"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:onClick="downRightClick"
            android:src="@drawable/blank" />

        <ImageButton
            android:id="@+id/ImageButton3"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:onClick="leftClick"
            android:src="@drawable/__" />

        <ImageButton
            android:id="@+id/ImageButton7"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:onClick="downClick"
            android:src="@drawable/ll" />

        <ImageButton
            android:id="@+id/ImageButton6"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:onClick="downLeftClick"
            android:src="@drawable/blank" />

        <ImageButton
            android:id="@+id/ImageButton5"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:onClick="rightClick"
            android:src="@drawable/__" />

        <ImageButton
            android:id="@+id/ImageButton1"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="upClick"
            android:src="@drawable/ll" />

        <ImageButton
            android:id="@+id/ImageButton2"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="upRightClick"
            android:src="@drawable/blank" />
    </GridLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gridLayout1"
        android:layout_alignRight="@+id/gridLayout1"
        android:layout_below="@+id/gridLayout1"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>